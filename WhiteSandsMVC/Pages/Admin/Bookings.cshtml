@page
@model WhiteSandsMVC.Pages.Admin.BookingsModel
@{
    ViewBag.Title = "Admin - Bookings";
}

<div class="admin-heading">
    <h1 class="h1-heading">All Bookings</h1>
    <a asp-controller="error" asp-action="underconstruction" target="_blank" class="large-btn">Create Booking</a>
</div>

<table id="DT_load" class="admin-table nowrap hover row-border order-column">
    <thead>
        <tr>
            <th>Booking ID</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Check-in</th>
            <th>Check-out</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
</table>


@section Scripts{
    <script asp-append-version="true" type="text/javascript" src="https://cdn.jsdelivr.net/momentjs/latest/moment.min.js"></script>
    <script asp-append-version="true" src="https://cdn.datatables.net/1.10.16/js/jquery.dataTables.min.js"></script>
    <script asp-append-version="true" src="~/js/admin/bookings.js"></script>
}