@page "/Admin/check-in/step-two/{bookingId}"
@model WhiteSandsMVC.Pages.Admin.check_in.StepTwoBillingModel
@{
    ViewBag.Title = "Check In - Step Two";
}

<div class="verify-stay-page-heading">
    <h1 class="h1-heading">Check In</h1>
</div>

<h2 class="h3-heading">Step 2: Billing and Registration</h2>

<div class="verify-stay-wrapper">
    <div class="verify-stay-guest-info">

        <div class="verify-stay-heading-wrapper">
            <h3 class="verify-stay-h2-heading">Billing</h3>
            @*<a asp-page="/Admin/Booking/edit/room" asp-route-bookingId="@Model.Input.Booking.Id" class="booking-details-edit-entry">Go to Statement</a>*@
        </div>

        <div class="booking-details-row">
            <h4 class="booking-details-heading">Status</h4>
            <p class="booking-details-row-info">@Model.Input.PaymentStatus</p>
        </div>

        <h4 class="booking-details-heading">Charges</h4>
        @foreach (var charge in Model.Input.LineItemCharges)
        {
            <div class="booking-details__line-item-row">
                <span class="booking-details__line-item-price">$@string.Format("{0:0.00}", charge.Amount)</span>
                <span class="booking-details-row-info">@charge.Name</span>
            </div>

        }
        <hr class="booking-details-hr" />
        <h4 class="booking-details-heading">Total</h4>
        <p class="booking-details-row-info text-bold">$@string.Format("{0:0.00}", Model.Input.TotalCost)</p>
    </div>

    <div class="verify-stay-room-info">
        <div class="verify-stay-heading-wrapper">
            <h3 class="verify-stay-h2-heading">Payment Method</h3>
            <a asp-page="/Admin/Booking/edit/payment" asp-route-guestId="@Model.Input.Booking.GuestId" asp-route-bookingId="@Model.Input.Booking.Id" class="booking-details-edit-entry">Edit Entry</a>
        </div>

        <div class="booking-details-row">
            <h4 class="booking-details-heading">Credit Card Name</h4>
            <p class="booking-details-row-info">@Model.Input.Booking.Guest.NameOnCreditCard</p>
        </div>

        <div class="booking-details-row">
            <h4 class="booking-details-heading">Credit Card Number</h4>
            <p class="booking-details-row-info">@Model.Input.Booking.Guest.CreditCardNumber</p>
        </div>

        <div class="booking-details-row--credit-card">
            <div>
                <h4 class="booking-details-heading">Expiry Month</h4>
                <p class="booking-details-row-info">@Model.Input.Booking.Guest.CreditCardExpiryMonth</p>

            </div>
            <div>
                <h4 class="booking-details-heading">Expiry Year</h4>
                <p class="booking-details-row-info">@Model.Input.Booking.Guest.CreditCardExpiryYear</p>
            </div>
        </div>
    </div>
    


</div>

<div class="billing-checkbox-wrapper">
    <input id="billing-checkbox" class="styled-checkbox" disabled type="checkbox" />
    <label onclick="labelHandler()" class="text-serif">Registration Form Signed</label>
</div>

<div class="verify-stay-buttons">
    <a asp-page="/admin/check-in/StepOneVerifyStay" asp-route-id="@Model.Input.Booking.Id" class="large-btn mt-3" style="display: block; width: max-content;">&larr; Back</a>
    <div class="billing-registration-box">
        <button class="large-btn mt-3 mr-2">Print Registration Form</button>
        <form method="post">
            <input type="hidden" asp-for="@Model.Input.Booking.Id" />
            <button type="submit" id="billing-button" class="large-btn mt-3 billing-disabled-a" style="display: block; width: max-content;">Finalize Check In</button>
        </form>
    </div>
</div>

<script>
    function labelHandler() {
        const checkbox = document.getElementById("billing-checkbox");
        const finalizeBtn = document.getElementById("billing-button");
        if (checkbox.checked) {
            checkbox.checked = false;
            finalizeBtn.classList.add("billing-disabled-a");
        } else {
            checkbox.checked = true;
            finalizeBtn.classList.remove("billing-disabled-a");
        }
    }
</script>