@page "{id}"
@model WhiteSandsMVC.Pages.Admin.booking.DetailsModel
@{
    ViewBag.Title = "Admin - Booking Details";
}

<div class="admin-heading">
    <h1 class="h1-heading">Booking Details</h1>
</div>


<div class="booking-details-wrapper">
    <div class="booking-details-guest-info">
        <div class="booking-details-heading-wrapper">
            <h3 class="h2-heading">Guest Info</h3>
            <a asp-page="/admin/booking/edit/guest" asp-route-guestId="@Model.Booking.GuestId" asp-route-bookingId="@Model.Booking.Id" class="booking-details-edit-entry">Edit Entry</a>
        </div>
        <div class="booking-details-row">
            <h4 class="booking-details-heading">Name</h4>
            <p class="booking-details-row-info">@(Model.Booking.Guest.FirstName + " " + Model.Booking.Guest.LastName)</p>
        </div>

        <div class="booking-details-row">
            <h4 class="booking-details-heading">Phone Number</h4>
            <p class="booking-details-row-info">@Model.Booking.Guest.PhoneNumber</p>
        </div>

        <div class="booking-details-row">
            <h4 class="booking-details-heading">Email</h4>
            <p class="booking-details-row-info">@Model.Booking.Guest.Email</p>
        </div>

        <div class="booking-details-row">
            <h4 class="booking-details-heading">Country</h4>
            <p class="booking-details-row-info">@Model.Booking.Guest.Country</p>
        </div>

        <div class="booking-details-heading-wrapper mt-5">
            <h3 class="h2-heading">Payment Info</h3>
            <a asp-page="/Admin/Booking/edit/payment" asp-route-guestId="@Model.Booking.GuestId" asp-route-bookingId="@Model.Booking.Id" class="booking-details-edit-entry">Edit Entry</a>
        </div>

        <div class="booking-details-row">
            <h4 class="booking-details-heading">Credit Card Name</h4>
            <p class="booking-details-row-info">@Model.Booking.Guest.NameOnCreditCard</p>
        </div>

        <div class="booking-details-row">
            <h4 class="booking-details-heading">Credit Card Number</h4>
            <p class="booking-details-row-info">@Model.Booking.Guest.CreditCardNumber</p>
        </div>

        <div class="booking-details-row--credit-card">
            <div>
                <h4 class="booking-details-heading">Expiry Month</h4>
                <p class="booking-details-row-info">@Model.Booking.Guest.CreditCardExpiryMonth</p>

            </div>
            <div>
                <h4 class="booking-details-heading">Expiry Year</h4>
                <p class="booking-details-row-info">@Model.Booking.Guest.CreditCardExpiryYear</p>
            </div>
        </div>

        @*<div class="booking-details-row">
                <h4 class="booking-details-heading">Total Cost</h4>
                <p class="booking-details-row-info">$@string.Format("{0:0.00}", Model.Booking.TotalCost)</p>
            </div>*@



    </div>

    <div class="booking-details-basic-info">
        <div class="booking-details-heading-wrapper">
            <h3 class="h2-heading">Room Info</h3>
            <a asp-page="/Admin/Booking/edit/room" asp-route-bookingId="@Model.Booking.Id" class="booking-details-edit-entry">Edit Entry</a>
        </div>


        <div class="booking-details-row">
            <h4 class="booking-details-heading">Check in</h4>
            <p class="booking-details-row-info">@Model.Booking.CheckInDate.ToShortDateString()</p>
        </div>

        <div class="booking-details-row">
            <h4 class="booking-details-heading">Check out</h4>
            <p class="booking-details-row-info">@Model.Booking.CheckOutDate.ToShortDateString()</p>
        </div>

        <div class="booking-details-row">
            <h4 class="booking-details-heading">Room Type</h4>
            <p class="booking-details-row-info">@Model.Booking.RoomType.Name</p>
        </div>

        <div class="booking-details-row">
            <h4 class="booking-details-heading">Room Number</h4>
            <p class="booking-details-row-info">@Model.Booking.Room.RoomNumber</p>
        </div>

        <div class="booking-details-row">
            <h4 class="booking-details-heading">Status</h4>
            <p class="booking-details-row-info">@Model.Booking.Status</p>
        </div>

        <div class="booking-details-row">
            <h4 class="booking-details-heading">Notes</h4>
            <p class="booking-details-row-info">@Model.Booking.Notes</p>
        </div>

        <div class="booking-details-heading-wrapper">
            <h3 class="h2-heading">Billing Info</h3>
            <a asp-page="/Admin/Booking/edit/room" asp-route-bookingId="@Model.Booking.Id" class="booking-details-edit-entry">Edit Entry</a>
        </div>

        @*<div class="booking-details-row">
            <h4 class="booking-details-heading">Notes</h4>
            <p class="booking-details-row-info">@Model.Booking.Notes</p>
        </div>*@
    </div>

</div>

<a asp-page="/admin/bookings" class="large-btn mt-3" style="display: block; width: max-content;">&larr; Back to List</a>